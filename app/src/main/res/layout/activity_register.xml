<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shoppinglists.LoginActivity"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <LinearLayout
        android:id="@+id/imagebutton_layout"
        android:layout_width="352dp"
        android:layout_height="119dp"
        android:gravity="center">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="126dp"
            android:layout_height="119dp"
            app:srcCompat="@drawable/ic_menu_gallery" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Photobutton_layout"
        android:layout_width="352dp"
        android:layout_height="36dp"
        android:gravity="center">

        <Button
            android:id="@+id/Photobutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="Add Photo" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/usernicknameText_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/usernicknameText"
            android:layout_width="307dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="User Nickname"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="64dp" />/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/passwordText_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/passwordText"
        android:layout_width="307dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="password"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="64dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/userfirstnameText_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/userfirstnameText"
        android:layout_width="307dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First Name"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="132dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/userlastnameText_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/userlastnameText"
        android:layout_width="307dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last Name"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="197dp" />
            </LinearLayout>


    <LinearLayout
        android:id="@+id/cityText_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/cityText"
        android:layout_width="307dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="City"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="254dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/streetText_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/streetText"
        android:layout_width="307dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="street"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="315dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/emaileditText_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/emaileditText"
            android:layout_width="305dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Email"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="379dp" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/send_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/send"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="confirm" />

    </LinearLayout>


</LinearLayout>